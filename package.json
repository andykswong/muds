{
  "name": "muds",
  "description": "Modular microframework for interactive data-oriented simulations",
  "scripts": {
    "build": "npm run build -ws",
    "clean": "rimraf docs && npm run clean -ws",
    "doc": "typedoc --entryPointStrategy packages --name muds --readme ./README.md --out docs ./",
    "test": "npm test -ws"
  },
  "workspaces": [
    "./packages/event",
    "./packages/gltf",
    "./packages/ioc",
    "./packages/node",
    "./packages/react",
    "./packages/store"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andykswong/muds.git"
  },
  "keywords": [
    "data-oriented",
    "muds",
    "microframework"
  ],
  "author": "Andy K.S. Wong <andykswong@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andykswong/muds/issues"
  },
  "homepage": "https://github.com/andykswong/muds",
  "devDependencies": {
    "typedoc-plugin-resolve-crossmodule-references": "^0.3"
  }
}
